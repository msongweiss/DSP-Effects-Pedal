#ifndef OVERDRIVE_H
#define OVERDRIVE_H

#define _USE_MATH_DEFINES

#include <stdint.h>
#include <math.h>

#define OVERDRIVE_LPF_LENGTH 37
extern float OVERDRIVE_LPF_COEFFS[OVERDRIVE_LPF_LENGTH];

typedef struct {
    // Sampling time
    float T;
    
//    float lpfInpBuf[OVERDRIVE_LPF_LENGTH];
//    int lpfInpPtr[OVERDRIVE_LPF_LENGTH];
//    uint8_t lpfInputBufIndex;
//    int lpfWPtr;
//    float lpfInpOut;
    
    // OD settings
    float preGain;
    float threshold;
    
    // Output IIR low pass filter
    float lpfOutBufIn[3];
    float lpfOutBufOut[3];
    float lpfOutWcT;
    float lpfOutDamp;
    float lpfOutOut;

    float out;
} Overdrive;

void Overdrive_Init(Overdrive *od, float samplingFreqHz, float lpfCutoffFreqHz, float odPreGain);
void Overdrive_SetLPF(Overdrive *od, float lpfCutOffFreqHz, float lpfDamping);
float Overdrive_Update(Overdrive *od, float inp);

#endif
